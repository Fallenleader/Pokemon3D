<?xml version="1.0" encoding="utf-8" ?>
<StackPanel Orientation="Vertical"
             HorizontalAlignment="Center"
             VerticalAlignment="Middle">

  <CheckBox HorizontalAlignment="Left" Margin="10">
    <TextBlock Margin="2,0,0,0"
               Text="{i18n:System:EnableShadows}"
               Color="ffffffff"
               HorizontalAlignment="Left" />
  </CheckBox>

  <CheckBox HorizontalAlignment="Left" Margin="10">
    <TextBlock Margin="2,0,0,0"
               Text="{i18n:System:EnableSoftShadows}"
               Color="ffffffff"
               HorizontalAlignment="Left" />
  </CheckBox>

  <ComboBox Id="ShadowQualityComboBox" HorizontalAlignment="Left" Margin="10" />

  <Button Margin="10" Id="BackToMainMenuButton" HorizontalAlignment="Left">
    <TextBlock Text="{i18n:System:Back}" />
  </Button>
</StackPanel>