<?xml version="1.0" encoding="utf-8" ?>
<Grid>
  <Grid.RowDefinitions>
    <RowDefinition Height="Auto" />
    <RowDefinition Height="*" />
    <RowDefinition Height="Auto" />
  </Grid.RowDefinitions>

  <Image Grid.Row="0" Source="Textures/P3D" Margin="20" Scale="0.5" />

  <StackPanel Grid.Row="1"
              Orientation="Vertical" 
              HorizontalAlignment="Center" 
              VerticalAlignment="Middle">
    
    <Button Margin="10" Id="StartButton">
      <TextBlock Text="{i18n:MainMenu:StartButton}" Margin="40,20" />
    </Button>
    <Button Margin="10" Id="LoadButton">
      <TextBlock Text="{i18n:MainMenu:LoadButton}" Margin="40,20" />
    </Button>
    <Button Margin="10" Id="QuitButton">
      <TextBlock Text="{i18n:MainMenu:QuitButton}" Margin="40,20" />
    </Button>
  </StackPanel>
  
  <TextBlock Grid.Row="2" 
             Margin="5"
             Text="Version 0.1 Alpha" 
             Color="ffffffff" 
             HorizontalAlignment="Right" />
</Grid>
