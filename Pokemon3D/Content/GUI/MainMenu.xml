<?xml version="1.0" encoding="utf-8" ?>
<StackPanel 
              Orientation="Vertical"
              HorizontalAlignment="Center"
              VerticalAlignment="Middle">

  <Button Margin="10" Id="StartButton" HorizontalAlignment="Stretch">
    <TextBlock Text="{i18n:System:StartNewGame}" Margin="40,20" />
  </Button>
  <Button Margin="10" Id="LoadButton" HorizontalAlignment="Stretch">
    <TextBlock Text="{i18n:System:LoadGame}" Margin="40,20" />
  </Button>
  <Button Margin="10" Id="OptionsButton" HorizontalAlignment="Stretch">
    <TextBlock Text="{i18n:System:Options}" Margin="40,20" />
  </Button>
  <Button Margin="10" Id="QuitButton" HorizontalAlignment="Stretch">
    <TextBlock Text="{i18n:System:QuitGame}" Margin="40,20" />
  </Button>
</StackPanel>